{
	"name": "voken",
	"private": true,
	"packageManager": "pnpm@10.0.0",
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"fmt": "prettier --write .",
		"check-types": "turbo run check-types",
		"cuthan": "pnpm --filter cuthan --",
		"cuthan:fmt": "pnpm --filter cuthan exec prettier --write .",
		"stone": "pnpm --filter @voken/stone --",
		"stone:fmt": "pnpm --filter @voken/stone exec prettier --write .",
		"ui": "pnpm --filter @voken/ui --",
		"ui:fmt": "pnpm --filter @voken/ui exec prettier --write ."
	},
	"devDependencies": {
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"turbo": "^2.5.5"
	},
	"engines": {
		"node": ">=18"
	},
	"prettier": {
		"useTabs": true,
		"singleQuote": true,
		"trailingComma": "none",
		"printWidth": 100,
		"plugins": [
			"prettier-plugin-svelte",
			"prettier-plugin-tailwindcss"
		],
		"overrides": [
			{
				"files": "*.svelte",
				"options": {
					"parser": "svelte"
				}
			}
		],
		"tailwindStylesheet": "./src/app.css"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}